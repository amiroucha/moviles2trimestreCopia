<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mainLayout"
        android:background="@color/green"
        tools:context=".fragments.HomeFragment">

    <ImageView
            android:layout_width="249dp"
            android:layout_height="216dp"
            app:srcCompat="@drawable/amazoncircul"
            android:id="@+id/amazonCirculo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/amazon" android:layout_marginTop="68dp"
    />
    <TextView
            android:text="@string/amazonPresentacion"
            android:layout_width="376dp"
            android:textSize="27sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_height="279dp" android:id="@+id/textView2"
            android:layout_marginTop="53dp"
            app:layout_constraintTop_toBottomOf="@+id/amazonCirculo" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.133"/>
</androidx.constraintlayout.widget.ConstraintLayout>
